{
  "name": "bounce-blaster",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "pnpm run lint && pnpm run format && pnpm tsc --noEmit && vite",
    "build": "node AI_Docs/md-range-map.js AI_Docs/design.md AI_Docs/step.md && tsc -b && vite build",
    "lint": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css}\" --ignore-path .gitignore",
    "preview": "vite preview",
