    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "eslint-config-airbnb-base": "15.0.0",
    "matter-js": "^0.20.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
